<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:id="@+id/mainlayout">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="bottom"
            app:backgroundTint="@color/colorWhite"
            android:clickable="true"
            app:fabAlignmentMode="center"
            app:contentInsetStart="0dp"
            app:contentInsetRight="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.example.sikkimtourapp.CustomTextView
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/stayView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_guest"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Stay"
                    app:font_name="regular"
                    android:textColor="#757575"
                    android:textAllCaps="false"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp">

                </com.example.sikkimtourapp.CustomTextView>

                <com.example.sikkimtourapp.CustomTextView
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/travelView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_travel"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Travel"
                    app:font_name="regular"
                    android:textAllCaps="false"
                    android:textColor="#757575"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp">

                </com.example.sikkimtourapp.CustomTextView>

                <com.example.sikkimtourapp.CustomTextView
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center|bottom"
                    android:orientation="vertical"
                    android:textColor="#757575"
                    android:text="Plan"
                    app:font_name="bold"
                    android:textAllCaps="false"
                    android:paddingBottom="7dp">

                </com.example.sikkimtourapp.CustomTextView>

                <com.example.sikkimtourapp.CustomTextView
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_tent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="Activities"
                    android:textColor="#757575"
                    app:font_name="regular"
                    android:textAllCaps="false"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp">

                </com.example.sikkimtourapp.CustomTextView>

                <com.example.sikkimtourapp.CustomTextView
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:drawableTop="@drawable/ic_more"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:text="More"
                    app:font_name="regular"
                    android:textColor="#757575"
                    android:textAllCaps="false"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp">

                </com.example.sikkimtourapp.CustomTextView>

            </LinearLayout>


        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_planning"
            android:backgroundTint= "@color/colorWhite"
            app:layout_anchor="@id/bottom_app_bar" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/my_view"
        android:background="@drawable/rounded_corners_top_left_right"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:shadowColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <com.example.sikkimtourapp.CustomTextView
                android:id="@+id/bottom_menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:font_name="semibold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>